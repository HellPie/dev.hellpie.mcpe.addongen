<resources>

    <style name="Theme.AddonGen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ~~~~~~~~~~~~~~~~~~~~ Header ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:elevation">@dimen/dimension_elevation_standard</item>
        <item name="android:background">@color/header</item>
    </style>

    <style name="Header.Small" parent="Header">
        <item name="android:layout_height">@dimen/header_small_height</item>
        <item name="android:background">@color/header_small</item>
    </style>

    <style name="Header.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_text_height</item>
        <item name="android:paddingLeft">@dimen/header_text_margin</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAppearance">@style/Header.TextStyle</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="PageTitle">
        <item name="android:id">@android:id/title</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!-- ~~~~~~~~~~~~~~~~~~~~ Bottom Bar ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="BottomBar" parent="@android:style/Widget.Material.ActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_bar_height</item>
        <item name="android:paddingStart">@dimen/bottom_bar_button_padding</item>
        <item name="android:paddingEnd">@dimen/bottom_bar_button_padding</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/bottom_bar</item>
    </style>

    <style name="BottomBar.Button" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">@style/BottomBar.TextStyle</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BottomBar.Button.Next" parent="BottomBar.Button">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:drawableEnd">@drawable/bottom_bar_button_next</item>
        <item name="android:text">@string/bottom_bar_button_next</item>
    </style>

    <style name="BottomBar.Button.Back" parent="BottomBar.Button">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:drawableStart">@drawable/bottom_bar_button_back</item>
        <item name="android:text">@string/bottom_bar_button_back</item>
    </style>


    <!-- ~~~~~~~~~~~~~~~~~~~~ Text Styles ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="BottomBar.TextStyle" parent="@android:style/TextAppearance.Material.Button">
        <item name="android:textSize">@dimen/bottom_bar_text_size</item>
        <item name="android:textColor">@color/bottom_bar_button_text</item>
    </style>

    <style name="Header.TextStyle" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
